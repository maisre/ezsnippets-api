{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "devspace-dev",
            "type": "shell",
            "command": "devspace dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Applying manifests.*",
                    "endsPattern": ".*Port forwarding.*9229.*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
